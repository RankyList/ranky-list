{
  "env": {
    "browser": true,
    "es2017": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:svelte/recommended",
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      },
      "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "indent": ["error", 4],
        "no-multiple-empty-lines": [
          "error",
          {
            "max": 1,
            "maxBOF": 2,
            "maxEOF": 0
          }
        ]
      }
    },
    {
      "files": ["*.ts"],
      "rules": {
        "@typescript-eslint/indent": ["error", 2]
      }
    },
    {
      "files": ["*.ts", "*.svelte"],
      "rules": {
        "@typescript-eslint/consistent-type-imports": ["error"],
        "@typescript-eslint/no-extra-semi": ["error"],
        "@typescript-eslint/no-unnecessary-condition": ["error"],
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/space-infix-ops": ["error"]
      }
    },
    {
      "env": {
        "browser": false,
        "es2017": true,
        "node": true
      },
      "files": ["src/routes/**/*.server.ts", "src/lib/server/**/*.ts"]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "extraFileExtensions": [".svelte"],
    "project": ["./tsconfig.json"],
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jsdoc", "import", "import-no-duplicates-prefix-resolved-path"],
  "root": true,
  "rules": {
    "@typescript-eslint/no-throw-literal": "off",
    "eol-last": ["error", "always"],
    "import-no-duplicates-prefix-resolved-path/no-duplicates": [
      "error",
      {
        "prefixResolvedPathWithImportName": true
      }
    ],
    "import/extensions": "off",
    "import/first": ["error"],
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ],
    "import/no-absolute-path": ["error"],
    "import/no-duplicates": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-mutable-exports": "off",
    "import/no-relative-packages": ["error"],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["\\$app.*$", "\\$service-worker.*$", "\\$env.*$"]
      }
    ],
    "import/no-useless-path-segments": [
      "error",
      {
        "noUselessIndex": true
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": {
          "caseInsensitive": false,
          "order": "asc"
        },
        "groups": ["external", "builtin", "internal", "sibling", "parent", "index", "object", "type"],
        "newlines-between": "always",
        "pathGroups": [
          {
            "group": "internal",
            "pattern": "$(src|components|server|stores|utils)/*"
          },
          {
            "group": "type",
            "pattern": "$types/*"
          }
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "jsdoc/no-types": ["error"],
    "keyword-spacing": [
      "error",
      {
        "before": true
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 150,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "no-constant-condition": ["error"],
    "no-extra-semi": "off",
    "no-invalid-regexp": ["error"],
    "no-multi-assign": ["error"],
    "no-multi-spaces": ["error"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true,
        "multiline": true
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "one-var": ["error", "never"],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "next": "return",
        "prev": "var"
      }
    ],
    "prefer-arrow-callback": ["off"],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "semi": "off",
    "semi-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "space-infix-ops": ["error"]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".cts", ".mts"],
      "espree": [".js", "jsx", ".cjs", ".mjs"]
    },
    "import/resolver": {
      "node": true,
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["./tsconfig.json", "./.svelte-kit/tsconfig.json"]
      }
    }
  }
}
